<h1 class="text-center mt-4">Images</h1>

<div class="container">
  <% if !@images.empty? %>
    <% @images.each do |image| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-body">
              <%= image_tag(image.url, alt: '', id: image.id, class: 'card-image') %>
            </div>
            <div class="card-footer text-muted">
              <p>
                <small>
                  Tags: <%= safe_join(image.tags.map { |tag| link_to(tag.name, images_path(tag: tag.name), class: 'js-tag') }, ', ') %>
                </small>
              </p>
              <small>Added <%= time_ago_in_words(image.created_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h3 class="text-center mt-4 js-no-images">No Images</h3>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
