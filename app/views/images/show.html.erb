<h1 class="text-center mt-4">View Image</h1>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-body">
          <%= image_tag(@image.url, alt: '', id: @image.id, style: "max-width: 400px;") %>
        </div>
      </div>
    </div>
  </div>
</div>
